<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/search_activity_background">


    <ImageView
        android:id="@+id/ivArtImage"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="center"
        android:layout_height="@dimen/albom_art"
        android:layout_width="@dimen/albom_art"
        android:src="@drawable/placeholder"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tvTrackName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="?attr/search_activity_primary_color"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="@dimen/sp_16"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Smells Like Teen SpiritSmells Like Teen SpiritSmells Like Teen Spirit"/>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

         <TextView
             android:id="@+id/tvArtistName"
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textColor="?attr/search_activity_dot_icon_Color"
             android:fontFamily="@font/ys_display_regular"
             android:textSize="@dimen/sp_11"
             android:maxLines="1"
             android:layout_weight="1"
             android:ellipsize="end"
             tools:text="Nirvana"/>

         <ImageView
             android:gravity="center"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="@dimen/dp_5"
             android:layout_marginRight="@dimen/dp_5"
             android:layout_height="@dimen/dp_3"
             android:layout_width="@dimen/dp_3"
             app:tint="?attr/search_activity_dot_icon_Color"
             android:src="@drawable/ellipse_1"/>

         <TextView
             android:id="@+id/tvTrackTime"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textColor="?attr/search_activity_dot_icon_Color"
             android:fontFamily="@font/ys_display_regular"
             android:textSize="@dimen/sp_11"
             android:maxLength="20"
             tools:text="5:01"/>


    </LinearLayout>

    </LinearLayout>

    <ImageView
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/dp_16"
        app:tint="?attr/search_activity_dot_icon_Color"
        android:src="@drawable/arrow_forward"/>


</LinearLayout>